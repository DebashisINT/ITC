<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_10sdp"
    android:background="@color/transparent"
    android:orientation="vertical"
    app:cardBackgroundColor="@color/transparent"
    app:cardCornerRadius="@dimen/_10sdp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_corner_white_bg"
        android:orientation="vertical">

        <com.fsmitc.widgets.AppCustomTextView
            android:id="@+id/dialog_adhaar_reg_adhharTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_10sdp"
            android:text="Adhaar Card No:"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/_15sdp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <com.fsmitc.widgets.AppCustomEditText
                android:id="@+id/dialog_adhaar_reg_et_no_et_1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/_5sdp"
                android:layout_weight="1"
                android:background="@drawable/rectangular_black_border_bg"
                android:gravity="center_vertical"
                android:maxLength="4"
                android:padding="@dimen/_5sdp"
                android:textSize="@dimen/_12sdp"
                android:inputType="number"/>

            <com.fsmitc.widgets.AppCustomEditText
                android:id="@+id/dialog_adhaar_reg_et_no_et_2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/_5sdp"
                android:layout_weight="1"
                android:background="@drawable/rectangular_black_border_bg"
                android:gravity="center_vertical"
                android:maxLength="4"
                android:padding="@dimen/_5sdp"
                android:textSize="@dimen/_12sdp"
                android:inputType="number"/>

            <com.fsmitc.widgets.AppCustomEditText
                android:id="@+id/dialog_adhaar_reg_et_no_et_3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/_5sdp"
                android:layout_weight="1"
                android:background="@drawable/rectangular_black_border_bg"
                android:gravity="center_vertical"
                android:maxLength="4"
                android:padding="@dimen/_5sdp"
                android:textSize="@dimen/_12sdp"
                android:inputType="number"/>


        </LinearLayout>

        <com.fsmitc.widgets.AppCustomTextView
            android:id="@+id/dialog_adhaar_reg_AttachedTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_10sdp"
            android:text="Attach Documnent:"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/_15sdp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/tv_dialog_adhaar_reg_iv_camera"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:contentDescription="@null"
                android:src="@drawable/ic_camera_pic" />


        </LinearLayout>


        <com.fsmitc.widgets.AppCustomEditText
            android:id="@+id/tv_dialog_adhaar_reg_feedback"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/_5sdp"
            android:background="@android:color/transparent"
            android:hint="@string/feedback"
            android:imeOptions="actionDone"
            android:inputType="text"
            android:padding="@dimen/_5sdp"
            android:textSize="@dimen/_12sdp" />

        <View
            android:id="@+id/dialog_adhaar_reg_view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/_5sdp"
            android:background="@color/black" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:layout_marginTop="@dimen/_30sdp"
            android:orientation="horizontal">

            <com.fsmitc.widgets.AppCustomTextView
                android:id="@+id/tv_dialog_adhaar_reg_confirm"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@drawable/selector_order_history_bg"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:text="Confirm"
                android:textColor="@drawable/selector_text_clor_blue_white"
                android:textSize="@dimen/_13sdp" />

        </LinearLayout>


    </LinearLayout>

</androidx.cardview.widget.CardView>