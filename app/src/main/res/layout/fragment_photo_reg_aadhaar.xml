<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:wheel="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:padding="@dimen/_5sdp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:orientation="horizontal"
                android:layout_marginLeft="@dimen/_7sdp">

                <com.breezefsmdsm.widgets.AppCustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Name  : "
                    android:gravity="center"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/_13sdp" />

                <com.breezefsmdsm.widgets.AppCustomTextView
                    android:id="@+id/tv_frag_photo_reg_aadhaar_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="Name : "
                    android:gravity="center|start"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/_13sdp"
                    android:paddingStart="@dimen/_4sdp"/>

            </LinearLayout>

            <ImageView
                android:id="@+id/iv_frag_photo_reg_aadhaar_pic"
                android:layout_width="@dimen/_200sdp"
                android:layout_height="@dimen/_200sdp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_10sdp"
                />



            <Button
                android:id="@+id/btn_frag_photo_reg_aadhaar_upload"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_60sdp"
                android:layout_marginRight="@dimen/_60sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:background="@drawable/selector_blue_botton_bg"
                android:gravity="center"
                android:padding="@dimen/_8sdp"
                android:text="Upload Aadhaar Pic"
                android:textColor="@android:color/white"
                android:textSize="@dimen/_12sdp"
                android:textAllCaps="false"/>

        </LinearLayout>


        <com.pnikosis.materialishprogress.ProgressWheel
            android:id="@+id/progress_wheel"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            wheel:matProg_barColor="@color/default_text_color"
            wheel:matProg_progressIndeterminate="true"
            android:layout_gravity="center"
            android:visibility="gone"/>

    </RelativeLayout>

</LinearLayout>